---
import Python from "../icons/Python.astro"
import C from "../icons/C.astro"
import LinkButton from "./LinkButton.astro"
import Link from "../icons/Link.astro"
import GitHub from "../icons/GitHub.astro"
import Arduino from "../icons/Arduino.astro"

const TAGS = {
PYTHON: {
    name:"Python",
    class:"bg-black text-white",
    icon: Python,
    },
C:{
    name:"C",
    class: "bg-black text-white",
    icon: C,
        
  },
  ARDUINO:{
    name:"Arduino",
    class: "bg-black text-white",
    icon: Arduino,
  },

}
const PROJECTS = [
{
    title: 'NutriApp - Aplicación para nutriologos',
    description: 'Cambio mayor',
    link:'https://tabler.io/icons',
    github:'https://github.com',
    image:'/svgl.webp',
    tags: [TAGS.PYTHON,TAGS.C]
},
{
    title: 'Sujeta Muestras - Manipulador asistido por computadora',
    description: 'Se hizo el control para mover los ejes a micrometros para poder analizar el fémur de un ratón con osteoporosis con precisión para la investigación de la UNAM. ',
    link:'https://drive.google.com/drive/folders/10ib9FfAdqp-cekgVJZC4e2967jQ5SE1f?usp=sharing',
    github:'',
    image:'/Femur.webp',
    tags: [TAGS.PYTHON,TAGS.ARDUINO,TAGS.C]
},
{
    title: 'DOOP - Lenguaje de programación',
    description: 'Un lenguaje de programación creado por mi mismo en Python PLY lex-yacc. El lenguaje soporta asignaciones, operación de matrices, ciclos, operadores lógicos e impresión.',
    link:'https://drive.google.com/drive/folders/1-M1IJAB9S_PhoOLn06b65NKbhMeAUW2l?usp=sharing',
    github:'',
    image:'/doop.webp',
    tags: [TAGS.PYTHON]
},

]
---

<div class="flex flex-col gap-y-16">
    {
      PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
    <div class="w-full md:w-1/2">
      <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
        <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
      </div>
    </div>
  
    <div class="w-full md:w-1/2 md:max-w-lg">
      <h3 class="text-2xl font-bold text-zinc-100 dark:text-gray-100">
        {title}
      </h3>
      <div class="flex flex-wrap mt-2">
        <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
  
        <div class="mt-2 text-gray-400 dark:text-gray-400">{description}</div>
        <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-6" />
                Code
                
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Preview
              </LinkButton>
            )}
          </footer>
      </div>
    </div>
  </article>
      ))
    }
  </div>